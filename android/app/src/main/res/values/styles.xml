<resources>
  <!-- Base application theme. -->
  <style name="Base" parent="Theme.MaterialComponents.Light.NoActionBar"></style>

  <style name="AppTheme" parent="Base">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>

    <!--Material Dialogs-->
    <item name="md_color_button_text">@color/colorAccent</item>
    <item name="md_corner_radius">16dp</item>
  </style>

  <style name="tag">
    <item name="android:textColor">@color/colorAccent</item>
  </style>

  <style name="LinkButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
    <item name="iconSize">20dp</item>
  </style>

  <style name="SectionTitleTextAppearance" parent="TextAppearance.MaterialComponents.Headline4">
    <item name="android:textColor">@color/textColorPrimary</item>
  </style>
</resources>
